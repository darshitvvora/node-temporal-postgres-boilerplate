# EditorConfig helps developers define and maintain consistent
# coding styles between different editors and IDEs
# https://editorconfig.org

root = true

# Default settings for all files
[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 80

# JavaScript and TypeScript
[*.{js,jsx,ts,tsx,mjs,cjs}]
indent_size = 2
max_line_length = 80

# JSON files
[*.json]
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# Package.json (npm/yarn)
[package.json]
indent_size = 2

# Shell scripts
[*.{sh,bash}]
indent_size = 2
end_of_line = lf

# Makefile (must use tabs)
[Makefile]
indent_style = tab

# Batch files (Windows)
[*.{bat,cmd}]
end_of_line = crlf

# Docker files
[Dockerfile*]
indent_size = 2

# SQL files
[*.sql]
indent_size = 2

# Configuration files
[*.config.{js,cjs,mjs}]
indent_size = 2

# Environment files
[.env*]
insert_final_newline = false
